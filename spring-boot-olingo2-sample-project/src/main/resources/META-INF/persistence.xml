<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="default">
		<class>com.metalop.code.samples.olingo.springbootolingo2sampleproject.entity.Student</class>
		<class>com.metalop.code.samples.olingo.springbootolingo2sampleproject.entity.Teacher</class>
		<class>com.metalop.code.samples.olingo.springbootolingo2sampleproject.entity.Device</class>
		<class>com.metalop.code.samples.olingo.springbootolingo2sampleproject.entity.Indicator</class>
		<properties>
			<property name="eclipselink.ddl-generation"
				value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
			<!-- Disable weaving to prevent load time weaver exception. Instead use 
				static weaving as mentioned in pom.xml -->
			<property name="eclipselink.weaving" value="false" />
		</properties>
	</persistence-unit>
</persistence>